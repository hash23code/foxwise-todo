# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============ STRIPE PAYMENTS ============
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook secret from Stripe CLI or Dashboard
# Get it from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Product Price IDs (create these in Stripe Dashboard)
# Pro Plan: $4.99/month
STRIPE_PRO_PRICE_ID=price_...
# Premium Plan: $14.99/month
STRIPE_PREMIUM_PRICE_ID=price_...

# ============ APP URL ============
# For local development
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production, replace with your domain:
# NEXT_PUBLIC_APP_URL=https://foxwise.app

# ============ AI FEATURES (Future Implementation) ============
# OpenAI for conversational AI agent
OPENAI_API_KEY=sk-...

# Anthropic Claude for AI agent (alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-...

# ============ VAPI (Voice Assistant - Premium Feature) ============
# Get from: https://vapi.ai/dashboard
VAPI_API_KEY=...
VAPI_PHONE_NUMBER=...
NEXT_PUBLIC_VAPI_PUBLIC_KEY=...

# ============ N8N WORKFLOWS (Premium Feature) ============
# N8N Cloud or Self-hosted URL
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/...
N8N_API_KEY=...

# ============ EMAIL (for notifications) ============
# Using Resend (https://resend.com)
RESEND_API_KEY=re_...

# ============ NOTES ============
# 1. Never commit the actual .env.local file to git
# 2. Copy this file to .env.local and fill in your values
# 3. For production (Vercel), add these variables in the Vercel dashboard
# 4. Stripe webhooks require HTTPS in production (use ngrok for local testing)
